{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"baseUrl": ".",
		"target": "es2019",
		"lib": [
			"esnext",
			"dom"
		],
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"compileOnSave": true,
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}
