{
	"name": "stranerd",
	"version": "1.0.0",
	"description": "Post your homework problems, get correct answers and help other students out",
	"private": true,
	"scripts": {
		"dev": "npm run env:copy:app && nuxt",
		"build": "nuxt build",
		"start": "nuxt start",
		"generate": "nuxt generate",
		"lint": "eslint src/ --ext .ts,.js,.vue --fix && stylelint src/**/*.scss src/**/*.vue --fix",
		"firebase:start": "npm run firebase:functions:build && npm run env:copy:functions && firebase emulators:start --import ./firebase/docs/exports -P development",
		"firebase:save": "firebase emulators:export ./firebase/docs/exports -P development",
		"firebase:functions:watch": "npm run watch --prefix ./firebase/functions",
		"firebase:functions:build": "npm run build --prefix ./firebase/functions",
		"firebase:functions:lint": "npm run lint --prefix ./firebase/functions",
		"env:set:functions": "node bin/set-functions-config",
		"env:copy:example": "copy env.example.json env.json",
		"env:copy:functions": "node bin/copy-env-functions",
		"env:copy:app": "node bin/copy-env-app",
		"prepare": "husky install"
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^5.15.4",
		"@nuxtjs/composition-api": "^0.29.0",
		"@stranerd/validate": "^1.4.1",
		"@stripe/stripe-js": "^1.17.1",
		"@vue-stripe/vue-stripe": "^4.2.5",
		"algoliasearch": "^4.10.5",
		"axios": "^0.21.4",
		"bootstrap": "^5.1.1",
		"cookie": "^0.4.1",
		"cookie-parser": "^1.4.5",
		"core-js": "^3.17.3",
		"cors": "^2.8.5",
		"email-templates": "^8.0.8",
		"express": "^4.17.1",
		"firebase": "^9.0.2",
		"firebase-admin": "^9.11.1",
		"flutterwave-vue-v3": "^1.0.5",
		"nodemailer": "^6.6.3",
		"nuxt": "^2.15.8",
		"sd-validate": "^1.0.4",
		"stripe": "^8.174.0",
		"sweetalert2": "^11.1.5",
		"vue": "^2.6.14",
		"vue-chat-scroll": "^1.4.0",
		"vue-instantsearch": "^4.0.0",
		"vue2-editor": "^2.10.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@nuxt/types": "^2.15.8",
		"@nuxt/typescript-build": "^2.1.0",
		"@nuxtjs/eslint-config-typescript": "^6.0.1",
		"@nuxtjs/eslint-module": "^3.0.2",
		"@nuxtjs/pwa": "^3.3.5",
		"@nuxtjs/style-resources": "^1.2.1",
		"@types/cookie": "^0.4.1",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.12",
		"@types/email-templates": "^8.0.4",
		"@types/nodemailer": "^6.4.4",
		"@types/vue2-editor": "^2.6.1",
		"@typescript-eslint/parser": "^4.31.0",
		"babel-eslint": "^10.1.0",
		"child_process": "^1.0.2",
		"eslint": "^7.32.0",
		"eslint-plugin-nuxt": "^2.0.0",
		"eslint-plugin-vue": "^7.17.0",
		"firebase-tools": "^9.18.0",
		"husky": "^7.0.2",
		"node-sass": "^5.0.0",
		"nuxt-compress": "^5.0.0",
		"nuxt-purgecss": "^1.0.0",
		"sass-loader": "^10.2.0",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-scss": "^3.20.1"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"repository": {
		"type": "git",
