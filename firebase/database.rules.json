{
	"rules": {
		"answers": {
			"$answerId": {
				"ratings": {
					"$userId": {
						".write": "auth.uid === $userId"
					}
				}
			}
		},
		"comments": {
			"answers": {
				"$answerId": {
					".read": true,
					".write": "auth.uid != null"
				}
			},
			"questions": {
				"$questionId": {
					".read": true,
					".write": "auth.uid != null"
				}
			}
		},
		"forms": {
			"messages": {
				".write": true
			},
			"reports": {
				".write": "auth.uid != null"
			}
		},
		"profiles": {
			".read": true,
			".indexOn": [
				"roles/isAdmin","bio/email",
				"rankings/daily","rankings/weekly","rankings/monthly","rankings/quarterly"
			],
			"$userId": {
				".read": true,
				".write": "auth.uid === $userId",
				"status": {
					".write": true
				},
				"tutor": {
					".write": "auth.token.isAdmin === true"
				}
			}
		},
		"chats": {
			"meta": {
				"$userId": {
					".read": true,
					".write": "auth.uid !== null",
					".indexOn": ["last/dates/createdAt"]
				}
			},
			"single": {
				"$path": {
					".read": true,
					".write": "auth.uid != null",
					".indexOn": ["dates/createdAt"]
				}
			}
		},
		"subjects": {
			".read": true,
			"$id": {
				".read": true,
				".write": "auth.token.isAdmin === true"
			}
		},
		"users": {
			"$userId": {
				".read": true,
				".write": "auth.uid === $userId",
				"notifications": {
					".indexOn": ["dates/createdAt", "seen"]
				}
			}
		},
		".read": false,
		".write": false
	}
}
