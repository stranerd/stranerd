doctype html
html(lang="en")
	head
		title New Message
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
	body(style="font-family: Helvetica;margin:0;padding:1rem;width:100vw;min-height:100vh;box-sizing: border-box;")
		img(src=meta.logo, alt="", style="height:40px;")
		h3 Name: #{message.name}
		h5 Email: #{message.email}
		p Message: #{message.message}
		span Sent: #{message.date}
